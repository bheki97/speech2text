<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/top_panel"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="16dp"
    android:orientation="vertical"
    android:background="@drawable/panel_background"
    android:elevation="4dp"
    android:padding="10dp">

<!--    Occasion Details-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/blue_zodiac"
            android:textSize="18sp"
            android:textStyle="bold"
            android:text="Occasion: "/>
        <TextView
            android:id="@+id/txtOccasion"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/my_sin"
            android:textSize="16sp"
            android:textStyle="bold"
            android:text="J005 Project"/>
    </LinearLayout>

<!--    Host name-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/blue_zodiac"
            android:textSize="18sp"
            android:textStyle="bold"
            android:text="Host: "/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/blue_zodiac"
            android:textSize="16sp"
            android:id="@+id/txtHostname"
            android:text="Bheki Mautjana"/>
    </LinearLayout>

<!--    Event Date-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/blue_zodiac"
            android:textSize="18sp"
            android:textStyle="bold"
            android:text="Date: "/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/blue_zodiac"
            android:textSize="16sp"
            android:id="@+id/txtEventDate"
            android:text="31st of May 2015"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="end"
        android:orientation="horizontal">
        <Button
            android:id="@+id/btnLeave"
            android:layout_width="wrap_content"
            android:layout_height="40sp"
            android:textColor="@color/blue_zodiac"
            android:textAlignment="center"
            android:text="Leave"/>

    </LinearLayout>
</LinearLayout>