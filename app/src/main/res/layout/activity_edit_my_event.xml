<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".model.recycler.myevents.EditMyEventActivity">

<!--    Edit Occasion-->
    <com.google.android.material.textfield.TextInputLayout

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"

        app:boxBackgroundMode="outline"
        app:boxBackgroundColor="@color/white"

        android:hint="Edit Occasion"

        >

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/idOccasion"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
    </com.google.android.material.textfield.TextInputLayout>


    <!--    Edit Occasion-->
    <com.google.android.material.textfield.TextInputLayout

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"

        app:boxBackgroundMode="outline"
        app:boxBackgroundColor="@color/white"

        android:hint="Edit Occasion"

        >

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/editDescption"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
    </com.google.android.material.textfield.TextInputLayout>

<!--    Edit Date-->
    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/date_time_input_layout"
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint=" Edit Date and Time"
        android:padding="10dp"
        android:layout_marginBottom="8dp">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/date_time_edit_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:focusable="false"
            android:inputType="none"
            android:onClick="showDateTimePicker" />

    </com.google.android.material.textfield.TextInputLayout>

<!--    confirm update-->
    <LinearLayout
        android:layout_margin="10dp"
        android:padding="8dp"
        android:gravity="end"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <Button
            android:id="@+id/btnUpdate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="confirm Update"/>

    </LinearLayout>
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/guestsRecycler"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

</LinearLayout>